.container
  .row
    .col-md-12
      .row#waterfall-container data-page=@cursor["page"] data-timestamp=@cursor["timestamp"]
        -if @goodlist
          -@goodlist.each do |good|
            .col-sm-4.col-lg-4.col-md-4
              .thumbnail data-toggle="modal" data-link=good["origin_url"] data-target="#product-modal" data-good-info=good["message"] style="cursor: pointer;"
                -if good["attachments"] && !good["attachments"][0].nil?
                  img src=good["attachments"][0]["src"] height="150"/
                -else
                  img alt="" src="http://placehold.it/320x150" width="320"/
                .caption
                  h4.pull-right $ 尚未提供
                  h4
                    span 看更多!
                  p
                    = good["message"]
                .ratings
                  p
                    | <br/>已有
                    = good["comment_count"]
                    | 則留言


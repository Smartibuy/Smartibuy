      <div align='center'>
        <h3 id='product-keyword'>#{@keyword} </h3>
      </div>
      <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">#{@cate}
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
          <li><a href="/search/1">電腦資訊</a></li>
          <li><a href="/search/2">手持通訊</a></li>
